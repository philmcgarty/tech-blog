<article class="blog">
  <div class="title">
    {{!-- <a href="{{post.post_url}}" target="_blank">{{post.title}}</a> --}}
    <span>{{blog.article}}</span>
  </div>
  <div class="meta">
    by {{blog.user.username}} on
    {{blog.created_at}}
    |
    <a href="/blog/{{blog.id}}">{{blog.comments.length}} comment(s)</a>
  </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each blog.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}